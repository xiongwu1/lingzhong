@CHARSET "UTF-8";

.home_top {
	width: 1324px;
	height: 45px;
	background-color: #fff;
	padding: 10px 20px;
	position:fixed;
	top:0;
}

.logo img{
	width: 85px;
	height: 45px;
	margin-left: 40px;
	float: left;
}

.search {
	width: 400px;
	height: 33px;
	float: left;
	margin: 5px 0 0 40px;
	border: 1px solid #CCCCCC;
	background-color: #E3E3E5;
}

.search input {
	float: left;
	width: 90%;
	height: 100%;
	border: 0;
	background-color:transparent;
	font-size: 14px;
}

.search a {
	width: 90%;
	height: 100%;
}

.search a span{
	display:block;
	width: 21px;
	height: 21px;
	position: relative;
	top:7px;
	right:7px;
	float:right;
    background-image: url('../../images/icon_out.png');
    background-position: -52px -176px;
}

.search:hover {
	background-color: #fff;
}

.search a span:hover {
	background-image: url('../../images/icon_out.png');
	background-position: -82px -176px;
}

.personal_logo {
	width: 220px;
	height: 30px;
	border-right: 1px solid #ccc;
	float: left;
	margin-left: 370px;
}

.home_logo {
	display:block;
	width: 21px;
	height: 21px;
	float:left;
	position: relative;
	top:7px;
    background-image: url('../../images/icon_out.png');
    background-position: -50px 0;
    margin-left: 10px;
}

.home_logo:hover {
	background-image: url('../../images/icon_out.png');
    background-position: -80px 0;
}

.home_title {
	float: left;
	position: relative;
	top:9px;
	font-size: 15px;
	margin-left: 3px;
}

